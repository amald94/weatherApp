<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/topDescLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ff0787"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Weather"/>

        <TextView
            android:id="@+id/txt_twoWea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textColor="#ff0787"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="25"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textColor="#ff0787"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="Â°"/>

        <TextView
            android:id="@+id/weekTdyDec"
            android:layout_below="@+id/txt_twoWea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:textColor="#ff0787"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Partially cloud"/>


</RelativeLayout>
        <android.support.v7.widget.CardView
        android:id="@+id/card_viewTdy"
        android:layout_below="@+id/topDescLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="3dp"
        android:visibility="gone"
        card_view:cardCornerRadius="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#77565555"
            android:padding="5dp"
            android:text="Today"
            android:textColor="#fff"
            android:textSize="25dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:padding="20dp">


            <TextView
                android:id="@+id/id_tdy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Today" />

            <TextView
                android:id="@+id/id_tmpTdy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/id_tdy"
                android:text="Today" />

            <TextView
                android:id="@+id/id_decTdy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/id_tmpTdy"
                android:text="" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/lyt_noCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="visible">


        <TextView
            android:layout_below="@+id/id_tdyDate"
            android:id="@+id/id_tdyTwo"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Today" />

        <TextView
            android:id="@+id/id_tmpTdyTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/id_tdyTwo"
            android:text="Today" />

        <TextView
            android:id="@+id/id_decTdyTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_tmpTdyTwo"
            android:text="Today" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/id_decTdyTwo"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#1c6284a9" />

        <TextView
            android:id="@+id/id_tdyDate"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#ff0787"
            android:text="Today"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
</FrameLayout>